.chat-main
  .chat-main--header
    .chat-main--header--name
      test
      %p.chat-main--header--name--member
        Member:
    .chat-main--header__box
      = link_to href = "#", class:"chat-main--header__box__btn" do
        Edit
  .chat-main__message
    .chat-main__message__box
      .chat-main__message__box__in
        %p.chat-main__message__box__in--name
          masa 
        %p.chat-main__message__box__in--date
