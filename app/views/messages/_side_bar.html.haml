.chat-side
  .chat-side--header
    .chat-side--header__box
      .chat-side--header__box--right
        = current_user.name
      .chat-side--header__box--left
        = link_to edit_user_path(current_user), class: "chat-side--header__box--left__btn" do
          = icon('fas', 'cog', class:"chat-side--header__box--left__btn__icon")
        = link_to new_group_path, class: "chat-side--header__box--left__btn" do
          = icon('far', 'edit', class:"chat-side--header__box--left__btn__icon")
  .chat-side__group
    - current_user.groups.each do |group|
      .chat-side__group__list
        = link_to group_messages_path(group), class:"chat-side__group__list-up" do
          %p.chat-side__group__list-up--name
            = group.name
          %p.chat-side__group__list-up--text
            = group.show_last_message